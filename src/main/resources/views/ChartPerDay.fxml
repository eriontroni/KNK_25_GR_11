<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="400.0" prefWidth="600.0"
      fx:controller="Controllers.ChartPerDayController">

    <children>
        <Text layoutX="160.0" layoutY="40.0"
              text="Numri i rezervimeve për 30 ditë" style="-fx-font-size: 18px;" />

        <LineChart fx:id="lineChart" layoutX="50.0" layoutY="60.0"
                   prefWidth="500.0" prefHeight="260.0">
            <xAxis>
                <NumberAxis fx:id="xAxis" label="Dita" lowerBound="1" upperBound="30" tickUnit="1" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Rezervime" lowerBound="0" upperBound="37" tickUnit="1" />
            </yAxis>
        </LineChart>

        <Button layoutX="20.0" layoutY="350.0" text="Kthehu" onAction="#handleBack" />
    </children>
</Pane>
