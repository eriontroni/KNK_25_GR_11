<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.HomePaLoginController" prefHeight="400.0" prefWidth="600.0">
    <children>
        <Pane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: transparent;">
            <children>

                <!-- Titulli -->
                <Label layoutX="254.0" layoutY="41.0" prefHeight="63.0" prefWidth="292.0" style="-fx-text-fill: #5a4a3c;" text="🏨 Hotel Dashboard">
                    <font>
                        <Font name="Segoe UI Semibold" size="32.0" />
                    </font>
                </Label>

                <!-- Navigation Buttons -->
                <HBox alignment="CENTER" layoutX="100.0" layoutY="150.0" prefHeight="60.0" prefWidth="600.0" spacing="20.0">
                    <children>
                        <Button fx:id="btnHome" onAction="#handleHome" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #a1866f; -fx-text-fill: white; -fx-background-radius: 12;" text="🏠 Home" />
                        <Button fx:id="btnRooms" onAction="#handleRooms" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #8c7b68; -fx-text-fill: white; -fx-background-radius: 12;" text="🛏️ Rooms" />
                        <Button fx:id="btnOffers" onAction="#handleOffers" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #b49a7a; -fx-text-fill: white; -fx-background-radius: 12;" text="🎁 Offers" />
                        <Button fx:id="btnEvents" onAction="#handleEvents" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #c9a66b; -fx-text-fill: white; -fx-background-radius: 12;" text="📅 Events" />
                        <Button fx:id="btnReservations" onAction="#handleReservations" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #7e6a58; -fx-text-fill: white; -fx-background-radius: 12;" text="📌 Reservations" />
                    </children>
                </HBox>

                <Button fx:id="logoutBtn"
                        layoutX="320.0"
                        layoutY="342.0"
                        prefHeight="38.0"
                        prefWidth="200.0"
                        style="-fx-background-color: #6b5746; -fx-text-fill: white; -fx-background-radius: 12;"
                        text="🔐 Log Out"
                        textAlignment="CENTER"
                        onAction="#handleAccount" />
                <Button fx:id="reviewsBtn" layoutX="679.0" layoutY="550.0" prefHeight="18.0" prefWidth="100.0" style="-fx-background-color: #6b5746; -fx-text-fill: white; -fx-background-radius: 12;" text="Read reviews" textAlignment="CENTER" />

            </children>
        </Pane>
    </children>
</AnchorPane>
