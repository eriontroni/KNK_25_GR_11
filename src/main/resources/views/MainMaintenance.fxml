<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Main_MaintenanceController"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f1ea, #d6c8b8);">

    <children>
        <VBox alignment="CENTER" spacing="30.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

            <children>
                <Label fx:id="labelPyetje" text="Në cilën kategori doni të vazhdoni?"
                       style="-fx-text-fill: #5a4a3c;">
                    <font>
                        <Font name="Segoe UI Semibold" size="22.0"/>
                    </font>
                </Label>

                <VBox spacing="15.0" alignment="CENTER">
                    <children>
                        <Button fx:id="mirembajtjeButton" text="🛠️ Mirëmbajtje"
                                onAction="#handleMirembajtje"
                                prefWidth="180.0" prefHeight="45.0"
                                style="-fx-background-color: #a1866f; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 1, 1);" />

                        <Button fx:id="pastrimButton" text="🧹 Pastrim"
                                onAction="#handlePastrim"
                                prefWidth="180.0" prefHeight="45.0"
                                style="-fx-background-color: #8c7b68; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 1, 1);" />

                        <Button fx:id="backToLoginButton" text="⬅️ Kthehu te Log In"
                                onAction="#handleBackToLogin"
                                prefWidth="180.0" prefHeight="40.0"
                                style="-fx-background-color: #7e6a58; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 1, 1);" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
