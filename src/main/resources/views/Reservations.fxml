<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="148.0" prefWidth="800.0" style="-fx-background-color: #1c1c1c;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReservationsController">

    <children>
        <!-- ARRIVAL -->
        <Label layoutX="30" layoutY="20" style="-fx-text-fill: white; -fx-font-weight: bold;" text="ARRIVAL" />
        <DatePicker fx:id="arrivalDate" layoutX="30" layoutY="45" prefWidth="160" />

        <!-- DEPARTURE -->
        <Label layoutX="210" layoutY="20" style="-fx-text-fill: white; -fx-font-weight: bold;" text="DEPARTURE" />
        <DatePicker fx:id="departureDate" layoutX="210" layoutY="45" prefWidth="160" />

        <!-- PAYMENT METHOD -->
        <Label layoutX="390" layoutY="20" style="-fx-text-fill: white; -fx-font-weight: bold;" text="PAYMENT METHOD" />
        <ComboBox fx:id="paymentMethod" layoutX="390" layoutY="45" prefWidth="160">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Credit Card" />
                    <String fx:value="PayPal" />
                    <String fx:value="Cash" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- BOOK BUTTON -->
        <Button fx:id="bookButton" layoutX="570" layoutY="45" onAction="#handleBook" prefWidth="120" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold;" text="BOOK" />
    </children>
</Pane>
