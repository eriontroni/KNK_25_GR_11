<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ReservationsHistoryController"
      prefWidth="800.0" prefHeight="600.0"
      style="-fx-background-color: #ffffff;">

    <children>
        <!-- Titulli -->
        <Label layoutX="320.0" layoutY="20.0" text="Rezervimet"
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <!-- TableView për listën e rezervimeve -->
        <TableView fx:id="reservationTable" layoutX="50.0" layoutY="70.0"
                   prefWidth="700.0" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="colRoom" text="Room ID" prefWidth="100.0" />
                <TableColumn fx:id="colUser" text="Customer ID" prefWidth="100.0" />
                <TableColumn fx:id="colDate" text="Data (Check-in/Check-out)" prefWidth="200.0" />
                <TableColumn fx:id="colStatus" text="Statusi" prefWidth="100.0" />
                <TableColumn fx:id="colActions" text="Veprime" prefWidth="150.0" />
            </columns>
        </TableView>

        <!-- Butoni Shto Rezervim -->
        <Button layoutX="600.0" layoutY="500.0" mnemonicParsing="false"
                onAction="#handleAddReservation"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                text="Shto Rezervim" />

    </children>
</Pane>
