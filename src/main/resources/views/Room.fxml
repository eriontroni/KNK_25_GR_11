<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.RoomsController"
            style="-fx-background-color: linear-gradient(to bottom right, #e3f2fd, #ffffff);">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER" style="
                -fx-background-color: linear-gradient(to right, #2c3e50, #34495e);
                -fx-padding: 20;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 4);">
            <Label text="🏨 Hotel Room Management" style="
                    -fx-text-fill: white;
                    -fx-font-size: 28px;
                    -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- QENDRA -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="
                -fx-background-color: transparent;
                -fx-padding: 20;">
            <VBox fx:id="roomListVBox" alignment="TOP_CENTER" spacing="25" style="
                    -fx-padding: 20;
                    -fx-background-color: rgba(255, 255, 255, 0.8);
                    -fx-background-radius: 20;
                    -fx-border-radius: 20;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 6);" />
        </ScrollPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="
                -fx-background-color: #f5f7fa;
                -fx-padding: 15;
                -fx-border-color: #dcdde1;
                -fx-border-width: 1 0 0 0;">
            <Button fx:id="btnBackToHome"
                    onAction="#goBackToHome"
                    text="🏠 Home"
                    style="
                        -fx-background-color: linear-gradient(to right, #74ebd5, #ACB6E5);
                        -fx-text-fill: #2c3e50;
                        -fx-font-weight: bold;
                        -fx-background-radius: 12;
                        -fx-padding: 8 16;
                        -fx-cursor: hand;" />

            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>

            <Label text="© 2025 Hotel Management System" style="-fx-text-fill: #7f8c8d;"/>
        </HBox>
    </bottom>
</BorderPane>
