<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f1ea, #d6c8b8);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.RoomsController">

    <children>
        <Pane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: transparent;">
            <children>

                <!-- Titulli -->
                <Label layoutX="280.0" layoutY="40.0" prefHeight="63.0" prefWidth="250.0" style="-fx-text-fill: #5a4a3c;" text="🛏️ Our Rooms">
                    <font>
                        <Font name="Segoe UI Semibold" size="30.0" />
                    </font>
                </Label>

                <!-- Lista e dhomave në një ScrollPane -->
                <ScrollPane layoutX="50.0" layoutY="120.0" prefHeight="360.0" prefWidth="700.0"
                            style="-fx-background: transparent;">
                    <content>
                        <VBox fx:id="roomListVBox" spacing="20.0" alignment="TOP_CENTER"
                              style="-fx-padding: 20; -fx-background-color: rgba(255, 255, 255, 0.85); -fx-background-radius: 15;"/>
                    </content>
                </ScrollPane>

                <!-- Butoni per kthim -->
                <Button fx:id="btnBackToHome"
                        layoutX="30.0" layoutY="540.0"
                        prefHeight="30.0" prefWidth="100.0"
                        text="🏠 Home"
                        onAction="#goBackToHome"
                        style="-fx-background-color: #a1866f; -fx-text-fill: white; -fx-background-radius: 12;" />

                <!-- E drejta autoriale -->
                <Label layoutX="580.0" layoutY="545.0" text="© 2025 Hotel Management System"
                       style="-fx-text-fill: #7d6e63;" />

            </children>
        </Pane>
    </children>
</AnchorPane>
