<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.RoomsController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Hotel Room Management" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-padding: 10;">
            <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

                <!-- Room 101 - Single -->
                <HBox spacing="20" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10;">
                    <ImageView fitHeight="120" fitWidth="160" preserveRatio="true">
                        <image>
                            <Image url="@../images/img_4.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Room 101" />
                        <Label text="Single - Dhomë me një krevat single" />
                        <Label text="Capacity: 1 person" />
                        <Label text="Price: $30.00/night" />
                        <HBox spacing="10">
                            <Label text="Available:" />
                            <Label style="-fx-text-fill: green; -fx-font-weight: bold;" text="Yes" />
                        </HBox>
                        <Button onAction="#handleClick" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Book Now" />
                    </VBox>
                </HBox>

                <!-- Room 102 - Double -->
                <HBox spacing="20" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10;">
                    <ImageView fitHeight="120" fitWidth="160" preserveRatio="true">
                        <image>
                            <Image url="@../images/img_3.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Room 102" />
                        <Label text="Double - Dhomë me një krevat dopio" />
                        <Label text="Capacity: 2 persons" />
                        <Label text="Price: $55.00/night" />
                        <HBox spacing="10">
                            <Label text="Available:" />
                            <Label style="-fx-text-fill: green; -fx-font-weight: bold;" text="Yes" />
                        </HBox>
                        <Button onAction="#handleClick" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Book Now" />
                    </VBox>
                </HBox>

                <!-- Room 201 - Suite -->
                <HBox spacing="20" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10;">
                    <ImageView fitHeight="120" fitWidth="160" preserveRatio="true">
                        <image>
                            <Image url="@../images/img_2.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Room 201" />
                        <Label text="Suite - Dhomë suite luksoze" />
                        <Label text="Capacity: 4 persons" />
                        <Label text="Price: $120.00/night" />
                        <HBox spacing="10">
                            <Label text="Available:" />
                            <Label style="-fx-text-fill: red; -fx-font-weight: bold;" text="No" />
                        </HBox>
                        <Button onAction="#handleClick" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Book Now" />
                    </VBox>
                </HBox>

                <!-- Room 202 - Family -->
                <HBox spacing="20" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10;">
                    <ImageView fitHeight="120" fitWidth="160" preserveRatio="true">
                        <image>
                            <Image url="@../images/img_1.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Room 202" />
                        <Label text="Family - Dhomë e madhe familjare" />
                        <Label text="Capacity: 5 persons" />
                        <Label text="Price: $95.00/night" />
                        <HBox spacing="10">
                            <Label text="Available:" />
                            <Label style="-fx-text-fill: green; -fx-font-weight: bold;" text="Yes" />
                        </HBox>
                        <Button onAction="#handleClick" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Book Now" />
                    </VBox>
                </HBox>

                <!-- Room 301 - Economy -->
                <HBox spacing="20" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10;">
                    <ImageView fitHeight="120" fitWidth="160" preserveRatio="true">
                        <image>
                            <Image url="@../images/img.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Room 301" />
                        <Label text="Economy - Dhomë ekonomike me facilitete bazë" />
                        <Label text="Capacity: 1 person" />
                        <Label text="Price: $25.00/night" />
                        <HBox spacing="10">
                            <Label text="Available:" />
                            <Label style="-fx-text-fill: green; -fx-font-weight: bold;" text="Yes" />
                        </HBox>
                        <Button onAction="#handleClick" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Book Now" />
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Label text="© 2025 Hotel Management System" />
        </HBox>
    </bottom>
</BorderPane>
