<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="searchbutton" prefHeight="600.0" prefWidth="896.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f1ea, #d6c8b8);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CleaningScheduleController">

    <children>
        <!-- Titulli -->
        <TextField editable="false" layoutX="14.0" layoutY="14.0" prefHeight="32.0" prefWidth="300.0" style="                        -fx-font-size: 22px;                        -fx-font-weight: bold;                        -fx-text-fill: #5a4a3c;                        -fx-background-color: transparent;                        -fx-border-color: transparent;                        -fx-font-family: 'Segoe UI Semibold';" text="🧹 Cleaning Schedule Table" />

        <!-- Fusha e kërkimit -->
        <TextField fx:id="searchBox" layoutX="514.0" layoutY="23.0" promptText="🔍 Search" style="                        -fx-background-radius: 12;                        -fx-border-radius: 12;                        -fx-padding: 6 10;                        -fx-background-color: white;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 1, 1);" />

        <ComboBox fx:id="comboBox" layoutX="684.0" layoutY="21.0" prefWidth="130.0" promptText="Search By" style="                       -fx-background-radius: 12;                       -fx-border-radius: 12;                       -fx-padding: 4 8;                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 3, 0, 1, 1);" />

        <Button fx:id="se" layoutX="836.0" layoutY="23.0" style="                     -fx-background-color: #a1866f;                     -fx-text-fill: white;                     -fx-background-radius: 12;                     -fx-font-weight: bold;" text="🔍" />

        <!-- Tabela -->
        <TableView fx:id="cleaningTable" layoutX="37.0" layoutY="96.0" prefHeight="382.0" prefWidth="698.0" style="                        -fx-background-color: rgba(255,255,255,0.9);                        -fx-background-radius: 12;                        -fx-border-radius: 12;                        -fx-border-color: #ffffff99;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.2, 0, 4);">
            <columns>
                <TableColumn fx:id="colId" prefWidth="85.60003662109375" text="🆔 ID" />
                <TableColumn fx:id="colRoomId" prefWidth="139.99996948242188" text="🏨 Room ID" />
                <TableColumn fx:id="colEmployeeId" prefWidth="160.79998779296875" text="👷 Employee ID" />
                <TableColumn fx:id="colDate" prefWidth="144.79998779296875" text="📅 Date" />
                <TableColumn fx:id="colStatus" prefWidth="169.5999755859375" text="✅ Status" />
            </columns>
        </TableView>

        <!-- Butonat -->
        <Button fx:id="btnAdd" layoutX="750.0" layoutY="96.0" onAction="#showAddDialog" prefHeight="46.0" prefWidth="114.0" style="-fx-background-color: #a1866f; -fx-text-fill: white; -fx-background-radius: 12;" text="➕ Add" />

        <Button fx:id="btnDelete" layoutX="750.0" layoutY="156.0" onAction="#deleteCleaningById" prefHeight="46.0" prefWidth="114.0" style="-fx-background-color: #8c7b68; -fx-text-fill: white; -fx-background-radius: 12;" text="🗑️ Delete" />

        <Button fx:id="btnUpdate" layoutX="750.0" layoutY="223.0" onAction="#editCleaningById" prefHeight="46.0" prefWidth="114.0" style="-fx-background-color: #b49a7a; -fx-text-fill: white; -fx-background-radius: 12;" text="✏️ Edit" />

        <Button fx:id="backbutton" layoutX="37.0" layoutY="539.0" onAction="#handleback" style="-fx-background-color: #7e6a58; -fx-text-fill: white; -fx-background-radius: 12;" text="⬅️ Back" />
      <Label fx:id="rowCountLabel" layoutX="37.0" layoutY="495.0" style="-fx-text-fill: #7d6e63;" text="Total rows: 0">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
