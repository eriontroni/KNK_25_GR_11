<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane fx:id="searchbutton" prefHeight="468.0" prefWidth="716.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.CleaningScheduleController"
            style="-fx-background-color: linear-gradient(to bottom right, #dfe9f3, #ffffff);">

    <children>
        <!-- Titulli -->
        <TextField layoutX="14.0" layoutY="14.0" prefHeight="32.0" prefWidth="260.0"
                   text="🧹 Cleaning Schedule Table"
                   editable="false"
                   style="
                       -fx-font-size: 20px;
                       -fx-font-weight: bold;
                       -fx-text-fill: #2c3e50;
                       -fx-background-color: transparent;
                       -fx-border-color: transparent;" />

        <!-- Fusha e kërkimit -->
        <TextField fx:id="searchBox" layoutX="298.0" layoutY="21.0" promptText="🔍 Search"
                   style="
                       -fx-background-radius: 12;
                       -fx-border-radius: 12;
                       -fx-padding: 6 10;
                       -fx-background-color: white;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 1, 1);" />

        <ComboBox fx:id="comboBox" layoutX="469.0" layoutY="21.0" prefWidth="150.0" promptText="Search By"
                  style="
                      -fx-background-radius: 12;
                      -fx-border-radius: 12;
                      -fx-padding: 4 8;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 3, 0, 1, 1);" />

        <Button fx:id="se" layoutX="642.0" layoutY="21.0" text="🔍"
                style="
                    -fx-background-color: #4ca1af;
                    -fx-text-fill: white;
                    -fx-background-radius: 12;
                    -fx-font-weight: bold;" />

        <!-- Tabela -->
        <TableView fx:id="cleaningTable" layoutX="37.0" layoutY="96.0" prefHeight="301.0" prefWidth="442.0"
                   style="
                       -fx-background-color: rgba(255,255,255,0.85);
                       -fx-background-radius: 16;
                       -fx-border-radius: 16;
                       -fx-border-color: #ffffff99;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0.2, 0, 6);">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="🆔 ID" />
                <TableColumn fx:id="colRoomId" prefWidth="75.0" text="🏨 Room ID" />
                <TableColumn fx:id="colEmployeeId" prefWidth="95.0" text="👷 Employee ID" />
                <TableColumn fx:id="colDate" prefWidth="107.0" text="📅 Date" />
                <TableColumn fx:id="colStatus" prefWidth="87.0" text="✅ Status" />
            </columns>
        </TableView>

        <!-- Butonat -->
        <Button fx:id="btnAdd" layoutX="528.0" layoutY="111.0" onAction="#showAddDialog"
                prefHeight="46.0" prefWidth="114.0" text="➕ Add"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10;" />

        <Button fx:id="btnDelete" layoutX="528.0" layoutY="166.0" onAction="#deleteCleaningById"
                prefHeight="46.0" prefWidth="114.0" text="🗑️ Delete"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10;" />

        <Button fx:id="btnUpdate" layoutX="528.0" layoutY="223.0" onAction="#editCleaningById"
                prefHeight="46.0" prefWidth="114.0" text="✏️ Edit"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 10;" />

        <Button fx:id="backbutton" layoutX="37.0" layoutY="414.0" onAction="#handleback" text="⬅️ Back"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 10;" />
    </children>
</AnchorPane>
