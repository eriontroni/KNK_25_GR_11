<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f1ea, #d6c8b8);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.OffersController">

    <children>

        <!-- Titulli Kryesor -->
        <Label fx:id="lblTitle" layoutX="270.0" layoutY="20.0" prefHeight="50.0" prefWidth="260.0" style="-fx-text-fill: #5a4a3c; -fx-font-size: 28px; -fx-border-color: transparent transparent #5a4a3c transparent; -fx-border-width: 0 0 2 0;" text="🎁 Ofertat Speciale">
            <font>
                <Font name="Segoe UI Semibold" size="28.0" />
            </font>
        </Label>

        <!-- Tabela e Ofertave -->
        <TableView fx:id="offersTable" layoutY="90.0" prefHeight="390.0" prefWidth="824.0" style="-fx-background-color: white; -fx-border-color: #d3c4b4; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <columns>
                <TableColumn fx:id="titleCol" prefWidth="120.0" text="Titulli" />
                <TableColumn fx:id="descriptionCol" prefWidth="240.0" text="Pershkrimi" />
                <TableColumn fx:id="discountCol" prefWidth="100.0" text="Zbritja (%)" />
                <TableColumn fx:id="startDateCol" prefWidth="120.0" text="Data Fillimit" />
                <TableColumn fx:id="endDateCol" prefWidth="120.0" text="Data Mbarimit" />
                <TableColumn fx:id="codeCol" prefWidth="120.0" text="Kodi" />
            </columns>
        </TableView>

        <!-- Label per Daten -->
        <Label fx:id="currentDateLabel" layoutX="580.0" layoutY="500.0" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #ede6dd; -fx-border-color: #cbbba6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-alignment: center; -fx-padding: 6; -fx-font-size: 13px; -fx-text-fill: #5a4a3c;" text="Data e sotit" />

        <!-- Butoni per tu kthyer ne Home -->
        <Button fx:id="btnBackToHome" layoutX="50.0" layoutY="500.0" prefHeight="38.0" prefWidth="160.0" style="-fx-background-color: #a1866f; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" text="← Ballina" />

    </children>
</AnchorPane>
