<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="800.0"
           style="-fx-background-color: linear-gradient(to bottom right, #f5f1ea, #d6c8b8);"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controllers.OffersController">

    <VBox alignment="CENTER" spacing="30.0" style="-fx-padding: 0 100;">
        <!-- Titulli Kryesor -->
        <Label fx:id="lblTitle" style="-fx-text-fill: #5a4a3c; -fx-font-size: 28px; -fx-border-color: transparent transparent #5a4a3c transparent; -fx-border-width: 0 0 2 0;" text="🎁 Our Special Offers">
            <font>
                <Font name="Segoe UI Semibold" size="28.0" />
            </font>
        </Label>

        <!-- Tabela e Ofertave -->
        <TableView fx:id="offersTable" prefHeight="390.0" prefWidth="760.0"
                   style="-fx-background-color: white; -fx-border-color: #d3c4b4; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <columns>
                <TableColumn fx:id="titleCol" text="Title" />
                <TableColumn fx:id="descriptionCol" text="Description" />
                <TableColumn fx:id="discountCol" text="Discount (%)" />
                <TableColumn fx:id="startDateCol" text="Start Date" />
                <TableColumn fx:id="endDateCol" text="End Date" />
                <TableColumn fx:id="codeCol" text="Code" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <!-- Rreshti i poshtëm (Data dhe Butoni) -->
        <HBox alignment="CENTER" spacing="200.0">
            <!-- Butoni për tu kthyer në Home -->
            <Button fx:id="btnBackToHome" prefHeight="38.0" prefWidth="160.0"
                    style="-fx-background-color: #a1866f; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;"
                    text="← Back to Home" />

            <!-- Label për Datën -->
            <Label fx:id="currentDateLabel" prefHeight="35.0" prefWidth="170.0"
                   style="-fx-background-color: #ede6dd; -fx-border-color: #cbbba6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-alignment: center; -fx-padding: 6; -fx-font-size: 13px; -fx-text-fill: #5a4a3c;"
                   text="Today's Date" />
        </HBox>
    </VBox>
</StackPane>