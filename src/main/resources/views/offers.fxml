<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e8ecf1); -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.OffersController">

    <children>

        <!-- Titulli Kryesor -->
        <Label fx:id="lblTitle" layoutX="290.0" layoutY="20.0" prefHeight="50.0" prefWidth="239.0" style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-border-color: transparent transparent #636e72 transparent; -fx-border-width: 0 0 2 0;" text="Our Special Offers">
            <font>
                <Font name="Georgia" size="28.0" />
            </font>
        </Label>

        <!-- Tabela e Ofertave -->
        <TableView fx:id="offersTable" layoutX="50.0" layoutY="90.0" prefHeight="390.0" prefWidth="700.0" style="-fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 6, 0, 0, 2);">
            <columns>
                <TableColumn fx:id="titleCol" prefWidth="120.0" text="Title" />
                <TableColumn fx:id="descriptionCol" prefWidth="240.0" text="Description" />
                <TableColumn fx:id="discountCol" prefWidth="100.0" text="Discount (%)" />
                <TableColumn fx:id="startDateCol" prefWidth="120.0" text="Start Date" />
                <TableColumn fx:id="endDateCol" prefWidth="120.0" text="End Date" />
            </columns>
        </TableView>

        <!-- Label për Datën -->
        <Label fx:id="currentDateLabel" layoutX="580.0" layoutY="500.0" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #b2bec3; -fx-border-radius: 6; -fx-background-radius: 6; -fx-alignment: center; -fx-padding: 6; -fx-font-size: 13px; -fx-text-fill: #2d3436;" text="Today's Date" />

        <!-- Butoni për tu kthyer në Home -->
        <Button fx:id="btnBackToHome" layoutX="50.0" layoutY="500.0" prefHeight="38.0" prefWidth="130.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" text="← Back to Home" />

    </children>
</AnchorPane>
